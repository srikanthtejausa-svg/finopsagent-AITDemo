resource "aws_instance" "qa_app" {
  ami           = "ami-0abcdef1234567890"
  instance_type = "t3.medium"

  root_block_device {
    volume_size = 100
    volume_type = "gp3"
  }

  tags = {
    Environment = "qa"
    CostCenter  = "engineering"
    Owner       = "platform-team@techcorp.com"
    Project     = "customer-portal"
  }
}

